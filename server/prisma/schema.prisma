generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        String  @id @default(uuid())
  nisn      String  @unique
  email     String  @unique
  fullName  String
  otp       String?
  role      Role           @default(u)
  isVoted   Boolean @default(false)
  createdAt DateTime @default(now())

  votedCasisId String? @unique
  votedCasis   Casis? @relation(fields: [votedCasisId], references: [id])
}

model Casis {
  id        String  @id @default(uuid())
  teamName  String
  leader    String
  leaderPhoto String?
  coLeader  String
  coLeaderPhoto String?
  createdAt DateTime @default(now())

  votedBy Student?
}

enum Role {
  a
  u
}